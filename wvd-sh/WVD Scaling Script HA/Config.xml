<?xml version="1.0" encoding="utf-8"?>
<!-- Version 1.1.0  -->
<RDMIScale>
  <Azure>
    <!-- HA Settings -->
    <Variable Name="HAOwnerName" Value="Home"/> <!-- Can have any arbitrary name but unique within the scaling infra, it can be a region name for example. If left blank it will default to computer name --> 
    <Variable Name="TakeOverThresholdMin" Value="30"/> <!-- Threshold in min to be tested by each scaling node before one takes over -->
    <Variable Name="LongRunningTakeOverThresholdMin" Value="180"/> <!-- Threshold in min to be tested by each scaling node before one takes over -->
    <Variable Name="StorageAccountRG" Value="Support-rg"/> <!-- Storage account resource group -->
    <Variable Name="StorageAccountName" Value="pmcstorage07"/> <!-- Storage account that hosts the scaling tables (HA and Log) -->
    <Variable Name="WVDTenantAdminAadTenantId" Value=""/> <!-- Aad Tenant Used for Wvd Tenant Admin, leave empty if it is the same AAD tenant -->
    <Variable Name="KeyVaultName" Value="pmckeyvault03"/> <!-- Keyvault name where the WVD Tenant Admin Account have stored secret -->
    <Variable Name="KeyVaultSecretName" Value=""/> <!-- Secret name to be retrieved -->
    <Variable Name="TruncateFilesThresholdInDays" Value="1" /> <!-- After this ammount of days the local log files will be truncated -->
    <Variable Name="LogTableKeepLastDays" Value="1" /> <!-- How many days worth it of logs will be kept in the table -->

    <!-- Settings required to authenticate to Azure subscription -->
    <Variable Name="AADTenantId" Value=""/>
    <Variable Name="AADApplicationId" Value=""/>    
   
    <!--Azure subscription name -->
    <Variable Name="currentAzureSubscriptionId" Value=""/>
    <!-- WVD tenant name -->
    <Variable Name="tenantName" Value=""/>
    <!-- WVD tenant name -->
    <Variable Name="tenantGroupName" Value="Default Tenant Group"/>
    <!-- WVD host pool name -->
    <Variable Name="hostPoolName" Value=""/>
  </Azure>
  <Deployment>
    <Variable Name="Rdbroker" Value="https://rdbroker.wvd.microsoft.com"/>
    <Variable Name="Username" Value=""/>
    <!-- accepted values True/False, True indicate service principal is being used to authenticate to WVD -->
    <Variable Name="isWVDServicePrincipal" Value="False" />
  </Deployment>
  <RdmiScaleSettings>
    <!-- Begin of the peak usage time -->
    <Variable Name="BeginPeakTime" Value="05:00:00"/>
    <!-- End of the peak usage time -->
    <Variable Name="EndPeakTime" Value="12:00:00"/>
    <!-- Time difference between local time and UTC, in hours -->
    <Variable Name="TimeDifferenceInHours" Value="-1" />
    <!-- Maximum number of sessions per CPU threshold used to determine when a new RDSH server needs to be started -->
    <Variable Name="SessionThresholdPerCPU" Value="1"/>
    <!-- Minimum number of RDSH servers to keep running during off-peak usage time -->
    <Variable Name="MinimumNumberOfRDSH" Value="1"/>
    <!-- Number of seconds to wait before forcing users to logoff. If 0, don't force users to logoff -->
    <Variable Name="LimitSecondsToForceLogOffUser" Value="5"/>
    <!-- Message title sent to a user before forcing logoff -->
    <Variable Name="LogOffMessageTitle" Value="System Under Maintenance"/>
    <!-- Message body to send to a user before forcing logoff -->
    <Variable Name="LogOffMessageBody" Value="Please save your work and logoff!"/>
  </RdmiScaleSettings>
</RDMIScale>